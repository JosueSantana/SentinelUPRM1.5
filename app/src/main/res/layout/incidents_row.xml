<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/windowBackground"
    android:padding="15dp">

    <ImageView
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/IncidentIcon"
        android:background="@drawable/sentinelbadge" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time"
        android:id="@+id/incidentRowTime"
        android:layout_alignParentTop="false"
        android:textColor="@color/material_grey_600"
        android:textSize="@dimen/abc_text_size_small_material"
        android:layout_alignParentRight="false"
        android:layout_alignParentBottom="false"
        android:layout_toLeftOf="@+id/incidentRowArrow"
        android:layout_alignBottom="@+id/IncidentIcon" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date"
        android:id="@+id/incidentRowDate"
        android:layout_toEndOf="@+id/IncidentIcon"
        android:textColor="@color/material_grey_600"
        android:textSize="@dimen/abc_text_size_small_material"
        android:layout_alignBottom="@+id/IncidentIcon"
        android:layout_marginLeft="@dimen/abc_button_padding_horizontal_material" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Region"
        android:id="@+id/incidentRowRegion"
        android:layout_alignParentTop="false"
        android:layout_alignParentEnd="false"
        android:layout_alignParentRight="false"
        android:textSize="@dimen/abc_text_size_medium_material"
        android:layout_toRightOf="@+id/IncidentIcon"
        android:layout_marginLeft="@dimen/abc_button_padding_horizontal_material"
        android:textStyle="bold" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/incidentRowArrow"
        android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
        android:layout_span="1"
        android:layout_column="1"
        android:background="#0000"
        android:layout_gravity="center_vertical"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/incidentRowRegion"
        android:layout_above="@+id/incidentRowTime" />

</RelativeLayout>