<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hmkcode.locations.sentineluprm15.Activities.SplashActivity"
    android:background="@color/colorPrimary">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/toplabelalerted"
        android:id="@+id/textView8"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:textSize="@dimen/abc_text_size_display_1_material"
        android:fontFamily="sans-serif-black"
        android:textColor="@color/textColorPrimary"
        android:textAlignment="center"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin" />

    <ImageView
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:id="@+id/sentinelLogo"
        android:layout_centerInParent="true"
        android:src="@drawable/logosentinel" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bottomlabelalerted"
        android:id="@+id/bottomlabelalerted"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/abc_text_size_medium_material"
        android:textColor="@color/textColorPrimary"
        android:layout_marginBottom="@dimen/minHeight"
        android:gravity="center_horizontal"
        android:textAlignment="gravity" />

</RelativeLayout>
