<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.SignupActivity"
    android:background="@color/colorSecondaryDark">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:id="@+id/appbarlayout"
        android:background="@color/colorPrimary">

        <ImageButton
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/imageButton4"
            android:layout_centerInParent="true"
            android:background="@drawable/ic_settings_phone_white_24dp"
            android:gravity="center_horizontal"
            android:layout_marginTop="10dp" />

    </RelativeLayout>


    <android.support.design.widget.TextInputLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textColorHint="@color/colorPrimaryT"
        android:layout_below="@+id/appbarlayout"
        android:id="@+id/nameContainer"
        android:layout_centerHorizontal="true">

        <AutoCompleteTextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="First Name"
            android:inputType="textPersonName"
            android:maxLines="1"
            android:singleLine="true"
            android:backgroundTint="@color/textColorPrimary"
            android:textColor="@color/textColorPrimary"
            android:gravity="center_horizontal" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textColorHint="@color/colorPrimaryT"
        android:layout_below="@+id/nameContainer"
        android:id="@+id/lastContainer"
        android:layout_centerHorizontal="true">

        <AutoCompleteTextView
            android:id="@+id/lastName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Last Name"
            android:inputType="textPersonName"
            android:maxLines="1"
            android:singleLine="true"
            android:backgroundTint="@color/textColorPrimary"
            android:textColor="@color/textColorPrimary"
            android:gravity="center_horizontal" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textColorHint="@color/colorPrimaryT"
        android:textColor="@color/textColorPrimary"
        android:layout_below="@+id/lastContainer"
        android:id="@+id/emailContainer"
        android:layout_centerHorizontal="true">

        <AutoCompleteTextView
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/prompt_email"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:singleLine="true"
            android:backgroundTint="@color/textColorPrimary"
            android:textColor="@color/textColorPrimary"
            android:gravity="center_horizontal" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textColorHint="@color/colorPrimaryT"
        android:textColor="@color/textColorPrimary"
        android:layout_below="@+id/emailContainer"
        android:id="@+id/passContainer"
        android:layout_centerInParent="true">

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:imeActionId="@+id/login"
            android:imeActionLabel="@string/action_sign_in_short"
            android:imeOptions="actionUnspecified"
            android:inputType="textPassword"
            android:backgroundTint="@color/textColorPrimary"
            android:textColor="@color/textColorPrimary"
            android:maxLines="1"
            android:singleLine="true"
            android:gravity="center" />

    </android.support.design.widget.TextInputLayout>

    <ImageButton
        android:layout_width="135dp"
        android:layout_height="135dp"
        android:id="@+id/imageButton3"
        android:layout_below="@+id/passContainer"
        android:layout_centerInParent="true"
        android:background="@drawable/logosentinel"
        android:layout_marginTop="10dp" />

</RelativeLayout>
